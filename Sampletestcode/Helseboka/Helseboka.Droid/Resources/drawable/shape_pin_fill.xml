<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/light_fill_color"/>
            <stroke android:color="@color/inactive_border" android:width="1dp"/>
            <size
                android:width="40dp"
                android:height="40dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:color="@android:color/transparent"
                android:width="20dp"/>
            <solid android:color="@color/inactive_border"/>
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>
</layer-list>
